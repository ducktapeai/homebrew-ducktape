# DuckTape Environment Configuration

# Language Model API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
XAI_API_KEY=your_xai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Default Language Model (optional, defaults to OpenAI)
# Options: openai, grok, deepseek
DEFAULT_LLM=openai

# Zoom Integration (optional)
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Server Configuration (optional)
SERVER_PORT=3000              # Default port for WebSocket API
RUST_LOG=info                # Log level: debug, info, warn, error
MAX_CONNECTIONS=1000         # Maximum concurrent WebSocket connections
REQUEST_TIMEOUT_SECS=30      # Request timeout in seconds

# Security Settings (optional)
ENABLE_RATE_LIMITING=true     # Enable/disable rate limiting
MAX_REQUESTS_PER_MINUTE=100  # Rate limit per client
TLS_CERT_PATH=               # Path to TLS certificate for secure WebSocket
TLS_KEY_PATH=                # Path to TLS private key

# Calendar Settings (optional)
DEFAULT_CALENDAR=            # Default calendar for new events
REMINDER_MINUTES=15         # Default reminder time in minutes
MAX_RECURRING_YEARS=2       # Maximum years to create recurring events